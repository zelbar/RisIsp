@model RisIsp.Bll.Models.Contract

<table class="table table-bordered table-hover">
    <tr>
        <th>Vlasnik priključka</th>
        <td>
            @Model.Customer.FormalFullName (@Model.Customer.NumberOfId)
        </td>
    </tr>
    <tr>
        <th>Adresa priključka</th>
        <td>
            @Model.Address.FullAddress
        </td>
    </tr>
    <tr>
        <th>Datum sklapanja ugovora</th>
        <td>
            @Model.SignDate
        </td>
    </tr>
    <tr>
        <th>Paketi usluga</th>
        <td>
            <ul>
                @foreach (var sp in Model.ServicePackages)
                {
                    <li>@sp.NameAndMonthlyPrice</li>

                }
            </ul>
        </td>
    </tr>
    <tr>
        <th>Cijena mjesečno</th>
        <td>
            @Model.TotalMonthlyPrice
        </td>
    </tr>
</table>